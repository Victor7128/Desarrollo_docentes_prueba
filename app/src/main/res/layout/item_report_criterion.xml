<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <TextView
        android:id="@+id/tvCriterionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="• Propone alternativa de solución tecnológica"
        android:textSize="13sp"
        android:textColor="#555555"
        android:layout_marginEnd="8dp"
        tools:text="• Propone alternativa de solución" />

    <TextView
        android:id="@+id/tvCriterionGrade"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:text="A"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_grade"
        android:layout_marginEnd="8dp"
        tools:text="A" />

    <ImageView
        android:id="@+id/ivObservation"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_note_empty"
        android:padding="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Observación"
        app:tint="#CCCCCC" />
</LinearLayout>