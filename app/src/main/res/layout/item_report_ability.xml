<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvAbilityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Determina una alternativa de solución"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#1565C0"
        android:paddingBottom="8dp"
        tools:text="Determina una alternativa de solución"/>

    <LinearLayout
        android:id="@+id/llCriteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="0dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PROM.:"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"/>

        <EditText
            android:id="@+id/etAbilityAverage"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:hint="Prom."
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:gravity="center"
            android:background="@drawable/bg_editable_grade"
            android:inputType="textCapCharacters"
            android:maxLength="2"
            android:layout_marginEnd="28dp"
            android:importantForAutofill="no"
            tools:text="A"/>
    </LinearLayout>
</LinearLayout>