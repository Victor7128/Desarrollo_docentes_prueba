<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¯ Completa tu Registro"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1A237E"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solo necesitamos validar tu identidad"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginBottom="24dp"/>

    <!-- DNI Input -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DNI"
        app:helperText="Ingresa tu DNI de 8 dÃ­gitos (se validarÃ¡ automÃ¡ticamente)"
        app:helperTextTextColor="#757575"
        app:prefixText="ðŸ†” "
        app:boxStrokeColor="#1976D2"
        app:hintTextColor="#1976D2"
        android:layout_marginBottom="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDNI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="8"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Loading RENIEC -->
    <LinearLayout
        android:id="@+id/llValidating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:padding="12dp"
        android:background="#E3F2FD"
        android:layout_marginBottom="12dp">

        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            style="?android:attr/progressBarStyleSmall"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”Ž Consultando RENIEC..."
            android:textSize="14sp"
            android:textColor="#1976D2"/>
    </LinearLayout>

    <!-- Validation Status -->
    <LinearLayout
        android:id="@+id/llValidationStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:padding="12dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/ivStatusIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/tvReniecStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Nombre completo (readonly) -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre completo"
        app:prefixText="ðŸ‘¤ "
        app:boxStrokeColor="#4CAF50"
        app:hintTextColor="#4CAF50"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="#1B5E20"
            android:textStyle="bold"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Ãrea/Especialidad -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ãrea/Especialidad"
        app:prefixText="ðŸ“š "
        app:boxStrokeColor="#1976D2"
        app:hintTextColor="#1976D2"
        android:layout_marginBottom="24dp">

        <AutoCompleteTextView
            android:id="@+id/actvArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ… Completar Registro"
            android:textAllCaps="false"
            android:enabled="false"
            app:cornerRadius="8dp"/>
    </LinearLayout>
</LinearLayout>