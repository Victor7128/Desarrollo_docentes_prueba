<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Competencia para Evaluación"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona la competencia que deseas evaluar:"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="16dp" />

    <!-- Producto seleccionado automáticamente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E8F5E8"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_green"
            android:gravity="center"
            android:text="✓"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvProductInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Producto: Informe de investigación"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Selector de Competencia -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Competencia a evaluar:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerCompetencies"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp" />

    <!-- Información adicional -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E3F2FD"
        android:padding="12dp">

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="ℹ"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="La matriz de evaluación mostrará todos los criterios de esta competencia para evaluar a cada estudiante."
            android:textSize="12sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>