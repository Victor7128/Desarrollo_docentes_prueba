<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Competencias del Currículo Nacional"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona las competencias que trabajarás en esta sesión de aprendizaje según el Currículo Nacional de la Educación Básica."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="16dp" />

    <!-- ✅ AGREGAR EL SPINNER QUE FALTABA -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filtrar por Área Curricular:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerAreasDialog"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background_dialog"
        android:padding="12dp"
        android:popupBackground="@android:color/white" />

    <!-- Lista de competencias con scroll -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Competencias disponibles:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCompetenciasDialog"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#FAFAFA"
        android:padding="8dp" />

    <!-- Información adicional -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="💡 Sugerencia: Selecciona solo las competencias que realmente desarrollarás en esta sesión."
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:background="#F0F8FF"
        android:padding="8dp"
        android:drawablePadding="8dp" />

</LinearLayout>