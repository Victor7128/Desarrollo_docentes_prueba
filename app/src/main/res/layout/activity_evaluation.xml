<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#1976D2"
            app:title="EvaluaciÃ³n"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- InformaciÃ³n de la sesiÃ³n -->
                <TextView
                    android:id="@+id/tvSessionInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="II Bimestre - 4Â° Grado A"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:gravity="center" />

                <!-- âœ… NUEVA: Fecha de registro -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvRegistrationDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14 de Octubre, 2025"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />

                </LinearLayout>

                <!-- Competencia -->
                <TextView
                    android:id="@+id/tvCompetencyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Competencia: Indaga mediante mÃ©todos cientÃ­ficos"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <!-- âœ… NUEVO: Contenedor de capacidades -->
                <LinearLayout
                    android:id="@+id/llAbilitiesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:background="#F0F8FF"
                    android:padding="8dp"
                    android:visibility="gone">

                    <!-- TÃ­tulo de capacidades -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Capacidades:"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="4dp" />

                    <!-- Lista dinÃ¡mica de capacidades -->
                    <LinearLayout
                        android:id="@+id/llAbilitiesList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Las capacidades se agregan dinÃ¡micamente aquÃ­ -->

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- TableView -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="1dp">

            <com.evrencoskun.tableview.TableView
                android:id="@+id/tableView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="horizontal|vertical"
                android:fadeScrollbars="false" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@android:color/white"
            android:elevation="2dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveAll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Guardar Evaluaciones"
                android:textSize="12sp"
                android:textStyle="bold"
                android:backgroundTint="#4CAF50" />

        </LinearLayout>

    </LinearLayout>

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>