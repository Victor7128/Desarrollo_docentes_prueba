<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Icono de criterio -->
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle_background_purple"
        android:gravity="center"
        android:text="✓"
        android:textSize="10sp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_vertical" />

    <!-- Información del criterio -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCriterionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Identifica datos y relaciones no explícitas"
            android:textSize="13sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvCriterionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Descripción del criterio"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Botón de opciones -->
    <ImageButton
        android:id="@+id/btnCriterionOptions"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_more_vert"
        android:contentDescription="Opciones"
        android:scaleType="center" />
</LinearLayout>